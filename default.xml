<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="arpi" fetch="https://github.com/android-rpi"/>
  <remote name="alex" fetch="https://github.com/alex-tu-cc"/>

  <remove-project name="platform/external/mesa3d"/>
  <project path="external/mesa3d" name="external_mesa3d" revision="rpi3-19.1" remote="arpi"/>
  <project path="external/drm_gralloc" name="external_drm_gralloc" revision="rpi3-19.1" remote="arpi"/>

  <project path="kernel/rpi" name="kernel_rpi" revision="arpi-4.19.y" remote="arpi"/>
  <project path="hardware/rpi" name="hardware_rpi" revision="android10" remote="arpi"/>
  <project path="device/brcm/rpi3" name="device_brcm_rpi3" revision="android10_personal" remote="alex">
      <linkfile src="scripts/rpi3-build-images.sh" dest="rpi3-build-images.sh" />
      <linkfile src="scripts/rpi3-build-kernel.sh" dest="rpi3-build-kernel.sh" />
      <linkfile src="scripts/rpi3-create-sd.sh" dest="rpi3-create-sd.sh" />
  </project>
  <remove-project name="platform/build"/>
  <project path="build/make" name="aosp_platform_build" revision="android10-rpi3-personal" remote="alex"  groups="pdk" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>

  <project path="vendor/arpi/RpLauncher" name="RpLauncher" revision="android10" remote="arpi"/>

  <remove-project name="device/amlogic/yukawa-kernel" />
  <remove-project name="device/google/bonito-kernel" />
  <remove-project name="device/google/coral-kernel" />
  <remove-project name="device/google/crosshatch-kernel" />
  <remove-project name="device/google/marlin-kernel" />
  <remove-project name="device/google/wahoo-kernel" />
  <remove-project name="device/linaro/hikey-kernel" />
  <remove-project name="device/linaro/poplar-kernel" />
  <remove-project name="device/ti/beagle-x15-kernel" />
</manifest>
